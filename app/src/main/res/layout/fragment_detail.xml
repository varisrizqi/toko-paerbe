<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.bottomnav.store.detail.DetailFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/parent_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:iconTint="?attr/colorControlNormal"
            app:navigationIcon="@drawable/ic_arrow_back"
            tools:title="@string/detail_product"/>


    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@id/ll_bottom_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/parent_toolbar">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/view_pager"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/tv_details_price"/>

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tab_details_tab_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                app:layout_constraintBottom_toBottomOf="@id/view_pager"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:tabBackground="@drawable/onboarding_selector"
                app:tabGravity="center"
                app:tabIndicatorColor="@android:color/transparent"
                app:tabIndicatorHeight="0dp"
                app:tabMode="fixed" />

            <TextView
                android:id="@+id/tv_details_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/poppins_medium"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/view_pager"
                tools:text="@string/price" />

            <ImageButton
                android:id="@+id/ib_details_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/transparent"
                tools:src="@drawable/ic_share"
                app:layout_constraintBottom_toBottomOf="@id/tv_details_price"
                app:layout_constraintEnd_toStartOf="@id/cb_details_favorite"
                app:layout_constraintTop_toTopOf="@id/tv_details_price" />

            <ImageButton
                android:id="@+id/cb_details_favorite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:backgroundTint="@color/transparent"
                tools:src="@drawable/ic_favorite_border"
                app:layout_constraintBottom_toBottomOf="@id/tv_details_price"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/tv_details_price" />

            <TextView
                android:id="@+id/tv_details_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:ellipsize="end"
                android:fontFamily="@font/poppins"
                android:maxLines="2"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_details_price"
                tools:text="@string/detail_title_store" />

            <TextView
                android:id="@+id/tv_sold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/poppins"
                tools:text="@string/sold_10"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_details_title" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:background="@drawable/shape_border_stroke"
                android:orientation="horizontal"
                android:paddingVertical="2dp"
                android:paddingStart="4dp"
                android:paddingEnd="8dp"
                app:layout_constraintBottom_toBottomOf="@id/tv_sold"
                app:layout_constraintStart_toEndOf="@id/tv_sold"
                app:layout_constraintTop_toTopOf="@id/tv_sold">

                <ImageView
                    android:id="@+id/img_star"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    tools:src="@drawable/ic_star" />

                <TextView
                    android:id="@+id/tv_rate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    tools:text="@string/rating_dan_ulasan" />

            </LinearLayout>

            <com.google.android.material.divider.MaterialDivider
                android:id="@+id/md_details1"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="12sp"
                app:layout_constraintTop_toBottomOf="@id/tv_sold" />

            <TextView
                android:id="@+id/tv_details_select_variant"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/poppins_medium"
                tools:text="@string/select_variant"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/md_details1" />

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/cg_details_variants"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_details_select_variant" />

            <com.google.android.material.divider.MaterialDivider
                android:id="@+id/md_details2"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="12sp"
                app:layout_constraintTop_toBottomOf="@id/cg_details_variants" />

            <TextView
                android:id="@+id/tv_details_product_desc_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/poppins_medium"
                tools:text="@string/product_description"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/md_details2" />

            <TextView
                android:id="@+id/tv_details_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/poppins"
                android:textSize="14sp"
                app:layout_constraintTop_toBottomOf="@id/tv_details_product_desc_title"
                tools:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nulla luctus ligula elit, vitae semper diam bibendum eu. Ut finibus sed lorem ut venenatis. Nunc tortor ipsum, feugiat et dictum vitae, tristique id lacus." />

            <com.google.android.material.divider.MaterialDivider
                android:id="@+id/md_details3"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="12sp"
                app:layout_constraintTop_toBottomOf="@id/tv_details_desc" />

            <TextView
                android:id="@+id/tv_details_review_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/poppins_medium"
                tools:text="@string/buyer_reviews"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/md_details3" />

            <Button
                android:id="@+id/btn_details_review_all"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                tools:text="@string/see_all"
                app:layout_constraintBottom_toBottomOf="@id/tv_details_review_title"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/tv_details_review_title" />


            <ImageView
                android:id="@+id/iv_details_star_review"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                app:layout_constraintBottom_toBottomOf="@+id/tv_details_rating_review"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/tv_details_satisfaction"
                tools:src="@drawable/ic_star" />

            <TextView
                android:id="@+id/tv_details_star_review"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:fontFamily="@font/poppins_medium"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="@id/iv_details_star_review"
                app:layout_constraintStart_toEndOf="@id/iv_details_star_review"
                app:layout_constraintTop_toTopOf="@id/iv_details_star_review"
                tools:text="4.5" />

            <TextView
                android:id="@+id/tv_details_star_max"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/poppins"
                tools:text="@string/_5_0"
                android:textSize="11sp"
                app:layout_constraintBottom_toBottomOf="@id/tv_details_star_review"
                app:layout_constraintStart_toEndOf="@id/tv_details_star_review"
                app:layout_constraintTop_toTopOf="@id/tv_details_star_review" />

            <TextView
                android:id="@+id/tv_details_satisfaction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="16dp"
                android:fontFamily="@font/poppins_medium"
                android:textSize="12sp"
                app:layout_constraintStart_toEndOf="@id/tv_details_star_max"
                app:layout_constraintTop_toBottomOf="@id/tv_details_review_title"
                tools:text="@string/_100_buyers_feel_satisfied" />

            <TextView
                android:id="@+id/tv_details_rating_review"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins"
                android:textSize="12sp"
                android:layout_marginBottom="30dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@id/tv_details_satisfaction"
                app:layout_constraintTop_toBottomOf="@id/tv_details_satisfaction"
                tools:text="@string/rating_dan_review" />


        </androidx.constraintlayout.widget.ConstraintLayout>


    </ScrollView>

    <LinearLayout
        android:id="@+id/ll_bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/md_theme_light_outline" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp">

            <Button
                android:id="@+id/btn_direct_buy"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                tools:text="@string/buy"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/btn_add_to_cart"
                app:layout_constraintStart_toStartOf="parent" />

            <Button
                android:id="@+id/btn_add_to_cart"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                tools:text="@string/cart_plus"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/btn_direct_buy" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>