<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cv_product_linear"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginHorizontal="2dp"
    android:layout_marginVertical="2dp"
    android:elevation="3dp"
    android:foreground="?attr/selectableItemBackground"
    android:stateListAnimator="@animator/list_animation_pressed"
    app:cardCornerRadius="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="8dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/iv_item_linear_img"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:importantForAccessibility="no"
            android:src="@drawable/thumbnail_load_product"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearanceOverlay="@style/customRoundedImageView8dp" />

        <TextView
            android:id="@+id/tv_item_linear_product_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:fontFamily="@font/poppins_400"
            android:maxLines="2"
            android:textSize="12sp"
            app:layout_constraintBottom_toTopOf="@id/tv_item_linear_price"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/iv_item_linear_img"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Lenovo Legion 7 16 I7 11800 16GB 1TB SSD RTX3070 8GB" />

        <TextView
            android:id="@+id/tv_item_linear_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="16dp"
            android:fontFamily="@font/poppins_medium"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@id/tv_item_linear_store_name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/iv_item_linear_img"
            app:layout_constraintTop_toBottomOf="@id/tv_item_linear_product_name"
            tools:text="Rp. 27.000.0000" />

        <ImageView
            android:id="@+id/iv_item_linear_ic_store_profile"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginStart="8dp"
            android:importantForAccessibility="no"
            android:src="@drawable/ic_person_circle"
            app:layout_constraintBottom_toBottomOf="@id/tv_item_linear_store_name"
            app:layout_constraintStart_toEndOf="@id/iv_item_linear_img"
            app:layout_constraintTop_toTopOf="@id/tv_item_linear_store_name" />

        <TextView
            android:id="@+id/tv_item_linear_store_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="16dp"
            android:fontFamily="@font/poppins_400"
            android:textSize="10sp"
            app:layout_constraintBottom_toTopOf="@id/tv_item_linear_rating_sold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/iv_item_linear_ic_store_profile"
            app:layout_constraintTop_toBottomOf="@id/tv_item_linear_price"
            tools:text="ProStoreComputer" />

        <ImageView
            android:id="@+id/iv_item_linear_ic_star"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginStart="8dp"
            android:importantForAccessibility="no"
            android:src="@drawable/ic_star"
            app:layout_constraintBottom_toBottomOf="@id/tv_item_linear_rating_sold"
            app:layout_constraintStart_toEndOf="@id/iv_item_linear_img"
            app:layout_constraintTop_toTopOf="@id/tv_item_linear_rating_sold" />

        <TextView
            android:id="@+id/tv_item_linear_rating_sold"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="2dp"

            android:fontFamily="@font/poppins_400"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/tv_item_linear_store_name"
            app:layout_constraintStart_toEndOf="@id/iv_item_linear_ic_star"
            app:layout_constraintTop_toBottomOf="@id/tv_item_linear_store_name"
            tools:text="5.0 | Terjual 90" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>